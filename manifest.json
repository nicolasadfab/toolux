{
    "name": "ToolUx",
    "version": "3.1",
    "permissions": [
        "tabs",
        "clipboardRead",
        "clipboardWrite",
        "unlimitedStorage",
        "storage",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "scripts": [
            "js/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "css": [
                "css/style.css"
            ],
            "js": [
                "js/toolux.min.js"
            ]
        }
    ],
    "sandbox": {
       "pages": [
           "index.html"
       ]
    },
    "offline_enabled": true,
    "icons": {
        "16": "icon16.png",
        "16": "icon19.png",
        "16": "icon32.png",
        "48": "icon48.png",
        "48": "icon100.png",
        "128": "icon128.png"
    },
    "browser_action": {
        "default_icon": "icon.png",
        "description": "UX helper tool - for webdesigner and developer"
    },
    "web_accessible_resources": [
        "tabs.html",
        "img/app-icon.png"
    ],
    "manifest_version": 2
}